<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
			<h1>New Post</h1>
		</div>
	</div>
	<%= form_with scope: :post, url: posts_path, local: true do |form|%>
		<div class="row">
			<div class="col-lg-12 text-center">
				<%= form.label :title %><br />
				<%= form.text_field :title %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 text-center">
				<%= form.label :text %><br />
				<%= form.text_field :text %>
			</div>
		</div>
		
		<br />

		<div class="row">
			<div class="col-lg-12 text-center">
				<%= form.submit %>
			</div>
		</div>
	<% end %>
</div>