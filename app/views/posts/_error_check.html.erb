<% if @post.errors.any? %>
	<div id="error_explanation" class="row">
		<div class="col-lg-12">
			<h3 id="error_title">
				<%= pluralize(@post.errors.count, "error") %> post invalid
			</h3>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<lu id="error_msg"><%=msg%></lu> <br />
				<% end %>
			</ul>
		</div>
	</div>
<% end %>
