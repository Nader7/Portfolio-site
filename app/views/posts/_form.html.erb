<%= form_with(model: @post, local: true) do |form| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@post.errors.count, "error") %> post invalid
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<lu><%=msg%></lu>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="row">
		<div class="col-lg-12 text-center">
			<%= form.label :title %><br />
   			<%= form.text_field :title %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center">
			<%= form.label :text %><br />
  			<%= form.text_area :text %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 text-center">
			<%= form.submit %>
		</div>
	</div>
<% end %>