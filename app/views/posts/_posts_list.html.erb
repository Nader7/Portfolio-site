<table class="table readable_text">
	<thead>
		<tr>
			<th>Title</th>
			<th>Text</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'Show', post_path(post), remote:true, class:"readable_text"%></td>
			<td><%= link_to 'Edit', edit_post_path(post), remote:true, class:"readable_text"%></td>
			<td>
				<%= link_to 'Destroy', post_path(post), remote:true, class:"readable_text", method: :delete, 
					data: {confirm: 'Are you sure?'}%>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>