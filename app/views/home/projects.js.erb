$('#project').html("<%= j render :partial => params[:project], :layout => 'layouts/project' %>")
		
//store current session
var activeSectionIndex = $('.fp-section.active').index();
var activeSlideIndex = $('.fp-section.active').find('.slide.active').index();

$.fn.fullpage.destroy('all');

//restore session
$('.section').eq(activeSectionIndex).addClass('active');

//restore current slide (if on one)
if(activeSlideIndex > -1)
	$('.section.active').find('.slide').eq(activeSlideIndex).addClass('active');

//re-enable fullpage
$('#fullpage').fullpage({
	anchors:['title','projects','skills'],
	sectionsColor: ['', '#3a3a3a', '#002a5e'],
	lockAnchors:true,
	autoScrolling:true,
	loopBottom: true,
	controlArrows:false,
	verticalCentered: true,
	scrollingSpeed: 850,
	navigation: true,
	navigationTooltips: ['Title', 'Projects', 'Skills'],
	showActiveTooltip: true,
	scrollOverflow: true,
	licenseKey: 'AA5B0793-878946C9-AD56A913-DD44D5FC'
});

//move to new slide
fullpage_api.moveSlideRight();
